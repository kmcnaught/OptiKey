<UserControl x:Class="JuliusSweetland.OptiKey.UI.Views.Exhibit.ForcedResetScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:resx="clr-namespace:JuliusSweetland.OptiKey.Properties"
        xmlns:userControls ="clr-namespace:JuliusSweetland.OptiKey.UI.Views.Exhibit.UserControls"
        xmlns:utilities="clr-namespace:JuliusSweetland.OptiKey.UI.Utilities"
        xmlns:converters="clr-namespace:JuliusSweetland.OptiKey.UI.ValueConverters"
        xmlns:properties="clr-namespace:JuliusSweetland.OptiKey.Properties"
        mc:Ignorable="d"
        Width="1920" Height="1080"
        Background="Black">

    <UserControl.Resources>
        <converters:ColourNameToBrush x:Key="ColourNameToBrush"/>
    </UserControl.Resources>

    <Grid>

        <userControls:ExhibitBackground/>

        <Grid  Height="750" VerticalAlignment="Top" Margin="200, 275, 200, 50">

            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Image Grid.Row="3" Margin="40" Source="Resources\logo-specialeffect.png"/>

            <Border BorderThickness="5" BorderBrush="White" Background="White" CornerRadius="5"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Grid.Row="4"
                >
                <TextBlock            
                   FontSize="32" FontFamily="Roboto" FontWeight="Regular"
                   Foreground="Black" Background="White" 
                   TextWrapping="Wrap" TextAlignment="Center" Padding="10"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                   utilities:FormattedTextHelper.FormattedText="{x:Static resx:Resources.EXHIBIT_FORCED_RESET_NEW_USER_MESSAGE}"
                   utilities:FormattedTextHelper.HighlightColor="{Binding Source={x:Static properties:Settings.Default}, Path=ExhibitResetButtonColor, Converter={StaticResource ColourNameToBrush}}"/>
            </Border>


            <Border BorderThickness="5" BorderBrush="White" Background="White" CornerRadius="5" VerticalAlignment="Center" HorizontalAlignment="Center"
                Grid.Row="1"
                >
                <TextBlock            
                   FontSize="32" FontFamily="Roboto" FontWeight="Regular"
                   Foreground="Black" Background="White" 
                   TextWrapping="Wrap" TextAlignment="Center" Padding="10"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="{x:Static resx:Resources.EXHIBIT_FORCED_RESET_THANK_YOU_MESSAGE}"/>
            </Border>

            <Border BorderThickness="5" BorderBrush="White" Background="White" CornerRadius="5" VerticalAlignment="Center" HorizontalAlignment="Center"
                Grid.Row="2"
                >
                <TextBlock            
                   FontSize="32" FontFamily="Roboto" FontWeight="Regular"
                   Foreground="Black" Background="White" 
                   TextWrapping="Wrap" TextAlignment="Center" Padding="10"
                   VerticalAlignment="Center" HorizontalAlignment="Center" Width="1104"
                   Text="{x:Static resx:Resources.EXHIBIT_FORCED_RESET_WORLD_USERS_MESSAGE}"/>
            </Border>
        </Grid>
        <userControls:ButtonReset/>


        <Image Source="Resources/Gabey EyeMine Front.png" Margin="1291,610,122,253" />
        <Image Source="Resources/Becky EyeMine GamesRoomCrop.JPG" Grid.Column="0" Margin="122,610,1350,253" />


    </Grid>

</UserControl>
