<UserControl x:Class="JuliusSweetland.OptiKey.UI.Views.Exhibit.EyeGaugeMidDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuliusSweetland.OptiKey.UI.Views"
        xmlns:userControls="clr-namespace:JuliusSweetland.OptiKey.UI.Views.Exhibit.UserControls"
        xmlns:resx="clr-namespace:JuliusSweetland.OptiKey.Properties"
        mc:Ignorable="d"
             
        Width="1920" Height="1080">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="0.9*" />
        </Grid.RowDefinitions>

        <Rectangle Fill="Black" Grid.RowSpan="3" Grid.ColumnSpan="4"></Rectangle>

        <Border Grid.ColumnSpan="2" BorderThickness="5" BorderBrush="White" Background="White" CornerRadius="5" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                 Grid.Column="1" Grid.Row="0" Margin="70"
                >
            <TextBlock            
                   FontSize="32" FontFamily="Roboto" FontWeight="Regular"
                   Foreground="Black" Background="White" 
                   TextWrapping="Wrap" TextAlignment="Center" Padding="10"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="{x:Static resx:Resources.EXHIBIT_GAUGE_ARE_YOU_THERE}"/>
        </Border>

        <Border Grid.ColumnSpan="2" BorderThickness="5" BorderBrush="White" Background="White" 
                CornerRadius="5" VerticalAlignment="Top" HorizontalAlignment="Center"
                Margin="30"
                Grid.Column="1" Grid.Row="3">
            <TextBlock            
                   FontSize="32" FontFamily="Roboto" FontWeight="Regular"
                   Foreground="Black" Background="White" 
                   TextWrapping="Wrap" TextAlignment="Center" Padding="10"
                Visibility="{Binding CanReset, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="{x:Static resx:Resources.EXHIBIT_GAUGE_NEW_USER_SETUP_MESSAGE}"/>
        </Border>

        <Border Grid.ColumnSpan="2" BorderThickness="5" BorderBrush="White" Background="White" 
                CornerRadius="5" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                Margin="30"
                Visibility="{Binding CanReset, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"
                Grid.Column="1" Grid.Row="3">
            <TextBlock            
                   FontSize="32" FontFamily="Roboto" FontWeight="Regular"
                   Foreground="Black" Background="White" 
                   TextWrapping="Wrap" TextAlignment="Center" Padding="10"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="{x:Static resx:Resources.EXHIBIT_GAUGE_RESET_SHORTLY_MESSAGE}"/>
        </Border>

        <Viewbox Grid.Column="1" Grid.Row="1"  Grid.ColumnSpan="2" >
            <Canvas Background="DarkGray" Width="300" Height="200" x:Name="trackBox">
                <Border x:Name="trackBorder"  Width="300" Height="200" Background="Transparent" BorderBrush="Green" BorderThickness="5"></Border>
                <!--<Label HorizontalAlignment="Center">These are your eyes</Label> -->
                <Rectangle x:Name="followRectangle1"                           
                           Canvas.Left="0" Canvas.Top="0" 
                           Width="{Binding LeftEyeSize}" Height="{Binding LeftEyeSize}" 
                           RadiusX="{Binding LeftEyeSize}" RadiusY="{Binding LeftEyeSize}" >
                    <Rectangle.Fill>
                        <SolidColorBrush x:Name="animatedBrush1" />
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle x:Name="followRectangle2"                            
                           Canvas.Left="0" Canvas.Top="0" 
                            Width="{Binding RightEyeSize}" Height="{Binding RightEyeSize}" 
                           RadiusX="{Binding RightEyeSize}" RadiusY="{Binding RightEyeSize}" >
                    <Rectangle.Fill>
                        <SolidColorBrush x:Name="animatedBrush2" />
                    </Rectangle.Fill>
                </Rectangle>
            </Canvas>
        </Viewbox>

        <userControls:ButtonBack Grid.RowSpan="4" Grid.ColumnSpan="4"
            Visibility="{Binding CanGoBack, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
        </userControls:ButtonBack>

        <userControls:ButtonReset Grid.RowSpan="4" Grid.ColumnSpan="4"
            Visibility="{Binding CanReset, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
        </userControls:ButtonReset>

    </Grid>

</UserControl>
