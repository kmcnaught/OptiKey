<Window x:Class="JuliusSweetland.OptiKey.UI.Views.Exhibit.FaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuliusSweetland.OptiKey.UI.Views.Exhibit"
        xmlns:WPFMediaKit="clr-namespace:WPFMediaKit.DirectShow.Controls;assembly=WPFMediaKit"
        mc:Ignorable="d"
        Title="FaceWindow" Height="450" Width="800">
    <Grid>
        <WPFMediaKit:VideoCaptureElement
            x:Name="videoCapElement"
            LoadedBehavior="Play"
            DesiredPixelWidth="320"
            DesiredPixelHeight="240"
            Stretch="UniformToFill"
            FPS="30"         
            RenderTransformOrigin="0.5,0.5"
        >
            <!-- Flip video horizontally  -->
            <WPFMediaKit:VideoCaptureElement.RenderTransform>
                <ScaleTransform ScaleX="-1" />
            </WPFMediaKit:VideoCaptureElement.RenderTransform> 
        </WPFMediaKit:VideoCaptureElement>
        <Image x:Name="imgOverlay"  
               Source="facemask.png"
               HorizontalAlignment="Stretch" 
               VerticalAlignment="Stretch"
               Width="Auto"
               Height="Auto"
               Opacity="0.5" />
    </Grid>
</Window>
