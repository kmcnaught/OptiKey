<UserControl x:Class="JuliusSweetland.OptiKey.UI.Views.Exhibit.UserControls.ButtonNext"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JuliusSweetland.OptiKey.UI.Views.Exhibit.UserControls"
             xmlns:resx="clr-namespace:JuliusSweetland.OptiKey.Properties"
             xmlns:controls="clr-namespace:JuliusSweetland.OptiKey.UI.Controls"
             xmlns:converters="clr-namespace:JuliusSweetland.OptiKey.UI.ValueConverters"
             xmlns:properties="clr-namespace:JuliusSweetland.OptiKey.Properties"
             mc:Ignorable="d" 
             Width="1920" Height="1080">
             
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/ExhibitButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:StringToColorConverter x:Key="StringToColorConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <controls:ExhibitButton 
            HorizontalAlignment="Right" 
            VerticalAlignment="Bottom"
            Margin="20,30"
            ButtonColor="{Binding Source={x:Static properties:Settings.Default}, Path=ExhibitNextButtonColor, Converter={StaticResource StringToColorConverter}}"
            ButtonText="{x:Static resx:Resources.EXHIBIT_BUTTON_NEXT}"
            ButtonIcon="🡺"/>
    </Grid>
</UserControl>
