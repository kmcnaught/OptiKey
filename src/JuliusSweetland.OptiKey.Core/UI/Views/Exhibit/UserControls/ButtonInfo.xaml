<UserControl x:Class="JuliusSweetland.OptiKey.UI.Views.Exhibit.UserControls.ButtonInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JuliusSweetland.OptiKey.UI.Views.Exhibit.UserControls"
             xmlns:resx="clr-namespace:JuliusSweetland.OptiKey.Properties"
             mc:Ignorable="d" 
             Width="1920" Height="1080">
    <Grid>


        <Grid Width="300" Height="200" 
              HorizontalAlignment="Left" 
              VerticalAlignment="Bottom"
              Margin="20,30"
              >
            <Image Source="../Resources/images/button--yellow.png" Width="100"></Image>
            <Image Source="../Resources/images/button--outline.png" Width="94"></Image>
            <Image Source="../Resources/images/button--outline.png" Width="102"></Image>

            <Rectangle RadiusX="5" RadiusY="5" Fill="White" Width="100" Height="45" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            <TextBlock FontFamily="Roboto" FontWeight="Medium" FontSize="32" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,1"
                       Text="{x:Static resx:Resources.EXHIBIT_BUTTON_INFO}"/>
        </Grid>
                    
        
    </Grid>
</UserControl>
