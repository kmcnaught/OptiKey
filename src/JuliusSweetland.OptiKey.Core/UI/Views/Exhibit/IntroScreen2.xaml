<UserControl x:Class="JuliusSweetland.OptiKey.UI.Views.Exhibit.IntroScreen2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuliusSweetland.OptiKey.UI.Views"
        xmlns:userControls="clr-namespace:JuliusSweetland.OptiKey.UI.Views.Exhibit.UserControls"
        xmlns:resx="clr-namespace:JuliusSweetland.OptiKey.Properties"
        mc:Ignorable="d"
        Width="1920" Height="1080"
        Background="Transparent">
    <Grid>
       
        <userControls:ExhibitBackground  Grid.ColumnSpan="4"  Grid.RowSpan="3"></userControls:ExhibitBackground>

        <Image Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"
               Width="1000"
               Source="Resources/images/demoScreenshot.PNG"/>


        <Grid VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="150">
            <Border BorderThickness="5" BorderBrush="White" Background="White" CornerRadius="5" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock            
                   FontSize="32" FontFamily="Roboto" FontWeight="Regular"
                   Foreground="Black" Background="White" 
                   TextWrapping="Wrap" TextAlignment="Center" Padding="10"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="{x:Static resx:Resources.EXHIBIT_INTRO_DESCRIPTION}"/>
            </Border>
        </Grid>

        <Grid VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="50">
            <Border BorderThickness="5" BorderBrush="White" Background="White" CornerRadius="5" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock            
                   FontSize="32" FontFamily="Roboto" FontWeight="Regular"
                   Foreground="Black" Background="White" 
                   TextWrapping="Wrap" TextAlignment="Center" Padding="10"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="{x:Static resx:Resources.EXHIBIT_INTRO_BUTTON_FULL_MESSAGE}"/>
            </Border>
        </Grid>
        
        <!--<userControls:ButtonNext Grid.ColumnSpan="4"  Grid.RowSpan="3"></userControls:ButtonNext>
        <userControls:ButtonInfo Grid.ColumnSpan="4"  Grid.RowSpan="3" Loaded="ButtonInfo_Loaded"></userControls:ButtonInfo>-->

    </Grid>

</UserControl>
