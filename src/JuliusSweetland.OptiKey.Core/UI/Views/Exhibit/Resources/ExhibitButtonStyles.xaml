<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:JuliusSweetland.OptiKey.UI.Controls"
                    xmlns:converters="clr-namespace:JuliusSweetland.OptiKey.UI.ValueConverters">

    <Style TargetType="{x:Type controls:ExhibitButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ExhibitButton}">
                    <Grid Width="300" Height="200">
                        
                        <!-- Main button circle with dynamic color -->
                        <Ellipse Width="100" Height="100"
                                Stroke="black" 
                                StrokeThickness="6">
                            <Ellipse.Fill>
                                <SolidColorBrush Color="{Binding ButtonColor, RelativeSource={RelativeSource TemplatedParent}}"/>
                            </Ellipse.Fill>
                        </Ellipse>

                        <!-- Semi-transparent outline glow (keeping existing PNG approach) -->
                        <Image Source="../Resources/images/button--outline.png" Width="94" />
                        <Image Source="../Resources/images/button--outline.png" Width="102" />

                        <!-- Glint effect - arc in top-left -->
                        <Path HorizontalAlignment="Center" VerticalAlignment="Center" Width="90" Height="90">
                            <Path.Data>
                                <PathGeometry>
                                    <PathFigure StartPoint="15,35">
                                        <ArcSegment Point="35,15" Size="40,40" 
                                           SweepDirection="Clockwise" 
                                           IsLargeArc="False" 
                                           RotationAngle="0"/>          
                                    </PathFigure>
                                </PathGeometry>
                            </Path.Data>
                            <Path.Stroke>
                                <SolidColorBrush Color="White" Opacity="0.7"/>
                            </Path.Stroke>
                            <Path.StrokeThickness>8</Path.StrokeThickness>
                            <Path.StrokeStartLineCap>Round</Path.StrokeStartLineCap>
                            <Path.StrokeEndLineCap>Round</Path.StrokeEndLineCap>
                        </Path>


                        <!-- Text label background -->
                        <Rectangle RadiusX="5" RadiusY="5" Fill="White" Width="100" Height="45" 
                                  HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                        
                        <!-- Text label -->
                        <TextBlock FontFamily="Roboto" FontWeight="Medium" FontSize="32" 
                                  VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                                  Margin="0,0,0,1" Text="{TemplateBinding ButtonText}"/>
                        
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>