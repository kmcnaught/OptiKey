<Window x:Class="JuliusSweetland.OptiKey.UI.Views.Exhibit.OnboardingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuliusSweetland.OptiKey.UI.Views.Exhibit"
        xmlns:vms="clr-namespace:JuliusSweetland.OptiKey.UI.ViewModels.Exhibit"        
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized"
        mc:Ignorable="d"
        Title="OnboardingWindow">
    <!-- This will display each page of the onboarding workflow -->
    <Window.Resources>
        <DataTemplate DataType="{x:Type vms:FaceViewModel}">
            <local:FaceWindow />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vms:IntroViewModel}">
            <local:IntroScreen />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vms:TobiiViewModel}">
            <local:EyeGauge />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vms:PostCalibViewModel}">
            <local:PostCalib />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <ContentControl Content="{Binding CurrentPageViewModel}" Margin="-10,0,10,0" />
        <!--<Rectangle x:Name="foregroundFade" Fill="Black"></Rectangle>-->
    </Grid>
</Window>
