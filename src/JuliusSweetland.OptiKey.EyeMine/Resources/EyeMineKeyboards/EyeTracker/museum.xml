<Keyboard>
   <Name>Minecraft\nIntro</Name>
   <BorderThickness>1,30,1,1</BorderThickness>
   <Grid>
      <Rows>1</Rows>
      <Cols>5</Cols>
   </Grid>
  <WindowState>Docked</WindowState>
   <InitialKeyStates>
     <KeyLockedDown>MouseMagneticCursor</KeyLockedDown>
   </InitialKeyStates>
   <Content>
     <KeyGroup Name="Debounce" BackgroundColor="black" Opacity=".9" KeyDownOpacity="1" CompletionTimes="1000, 5000" />   
      <DynamicKey>
         <KeyGroup>Debounce</KeyGroup>
         <Symbol>MinecraftAutoFly</Symbol>
         <Label>{Resource:FLY_KEY}</Label>
         <Text>g</Text>
      </DynamicKey>
      <DynamicKey>
      <Text>m</Text>
      <Symbol>MinecraftMineContinuous</Symbol>
      <Label>{Resource:MINE_KEY}</Label>
    </DynamicKey>
      <DynamicKey>
         <Symbol>MinecraftWalk</Symbol>
         <Label>{Resource:WALK_KEY}</Label>
         <Text>h</Text>
      </DynamicKey>      
      <DynamicKey>
         <Text>r</Text>
         <Symbol>MinecraftAttackContinuous</Symbol>
         <Label>{Resource:ATTACK_KEY}</Label>
      </DynamicKey>
      <DynamicKey>
         <Symbol>DwellBuild</Symbol>
         <Label>{Resource:PLACE_BLOCK_KEY}</Label>
         <Action>NumPad3</Action>
      </DynamicKey>
   </Content>
</Keyboard>