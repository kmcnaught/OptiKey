<Keyboard>
  <Name>Coding</Name>
	<WindowState>Floating</WindowState>
	<Position>Bottom</Position>
	<Width>100%</Width>
  <SymbolMargin>10</SymbolMargin>
  <BorderThickness>1,1,1,1</BorderThickness>
	<BackgroundColor>Transparent</BackgroundColor>
  <HideFromKeyboardMenu>true</HideFromKeyboardMenu>
	<BorderColor>Transparent</BorderColor>
    <Height>-40</Height>
    <VerticalOffset>-40</VerticalOffset>
    <Grid>
        <Rows>14</Rows>
        <Cols>16</Cols>
    </Grid>
    <KeyGroup Name="AcceleratingKey" LockOnTime="25" CompletionTimes="100%, 80%, 60%, 40%"></KeyGroup>
    <Content>

        <!-- top toolbar -->
        <DynamicKey Col="9"><Label>Save</Label>
          <KeyDown>LeftCtrl</KeyDown>
          <KeyDown>s</KeyDown>
          <Wait>200</Wait>
          <KeyUp>s</KeyUp>
          <KeyUp>LeftCtrl</KeyUp>
        </DynamicKey>
        <DynamicKey><Label>Open</Label>
          <KeyDown>LeftCtrl</KeyDown>
          <KeyDown>o</KeyDown>
          <Wait>200</Wait>
          <KeyUp>o</KeyUp>
          <KeyUp>LeftCtrl</KeyUp>
        </DynamicKey>
        <DynamicKey><Label>Close</Label>
          <KeyDown>LeftCtrl</KeyDown>
          <KeyDown>F4</KeyDown>
          <Wait>200</Wait>
          <KeyUp>F4</KeyUp>
          <KeyUp>LeftCtrl</KeyUp>
        </DynamicKey>
        <DynamicKey><Label>Copy</Label>
          <KeyDown>LeftCtrl</KeyDown>
          <KeyDown>c</KeyDown>
          <Wait>200</Wait>
          <KeyUp>c</KeyUp>
          <KeyUp>LeftCtrl</KeyUp>
        </DynamicKey>
        <DynamicKey><Label>Paste</Label>
          <KeyDown>LeftCtrl</KeyDown>
          <KeyDown>v</KeyDown>
          <Wait>200</Wait>
          <KeyUp>v</KeyUp>
          <KeyUp>LeftCtrl</KeyUp>
        </DynamicKey>

